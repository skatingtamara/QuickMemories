<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_height"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/child_name"
        style="@style/Widget.QuickMemories.ListItemTextView"
        android:layout_width="180dp"
        android:layout_marginStart="@dimen/margin_between_elements"
        android:fontFamily="sans-serif"
        app:layout_constraintEnd_toStartOf="@+id/child_dob"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Hija" />

    <TextView
        android:id="@+id/child_dob"
        style="@style/Widget.QuickMemories.ListItemTextView"
        android:layout_width="100dp"
        android:layout_below="@+id/child_name"
        android:layout_marginStart="@dimen/margin_between_elements"
        android:fontFamily="sans-serif-medium"
        android:textAlignment="center"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/child_name"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2002-02-02" />

</androidx.constraintlayout.widget.ConstraintLayout>